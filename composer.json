{
	"name": "crowdcg/upmembership-project",
	"description": "This is our project template for Up Membership.",
	"type": "project",
	"license": "GPL-2.0+",
	"minimum-stability": "dev",
	"prefer-stable": true,
	"require-dev": {
        	"behat/behat": "^3.1",
        	"drupal/drupal-extension": "^3.2",
        	"behat/mink": "~1.7",
        	"behat/mink-goutte-driver": "~1.2",
        	"jcalderonzumba/gastonjs": "~1.0.2",
        	"jcalderonzumba/mink-phantomjs-driver": "~0.3.1",
        	"mikey179/vfsStream": "~1.2",
        	"phpunit/phpunit": "~4.8",
        	"symfony/css-selector": "2.8.*",
		"drush/drush": "~8.0",
                "jakoch/phantomjs-installer": "1.9.8",
        	"phing/phing": "^2.14",
        	"squizlabs/php_codesniffer": "2.*"
    	},
	"require": {
        	"composer/installers": "^1.0.20",
        	"drupal-composer/drupal-scaffold": "^2.0.1",
        	"cweagans/composer-patches": "~1.0",
		"drupal/core": "^8.1",
        	"crowdcg/upmembership": "*"
    	},
    	"repositories": [
			{
				"type": "composer",
				"url":  "https://packages.drupal.org/8"
			}
    	],
	"autoload": {
		"classmap": [
			"scripts/ScriptHandler.php"
		]
	},
	"scripts": {
        	"drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        	"pre-install-cmd": [
            		"CrowdCG\\UpMembership\\ScriptHandler::checkComposerVersion"
        	],
        	"pre-update-cmd": [
            		"CrowdCG\\UpMembership\\ScriptHandler::checkComposerVersion"
        	],
        	"post-install-cmd": [
        	    	"CrowdCG\\UpMembership\\ScriptHandler::createRequiredFiles"
        	],
        	"post-update-cmd": [
            		"CrowdCG\\UpMembership\\ScriptHandler::createRequiredFiles"
        	]
    	},
    	"extra": {
        	"installer-paths": {
            		"web/core": ["type:drupal-core"],
            		"web/libraries/{$name}": ["type:drupal-library"],
            		"web/profiles/contrib/{$name}": ["type:drupal-profile"],
            		"web/themes/contrib/{$name}": ["type:drupal-theme"],
            		"drush/contrib/{$name}": ["type:drupal-drush"]
        	}
    	}
}
