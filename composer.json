{
	"name": "crowcg/upmembership-project",
	"description": "This is our project template for UpMembership.",
	"type": "project",
	"license": "GPL-2.0+",
	"minimum-stability": "aplpha",
	"prefer-stable": true,
	"require-dev": {
        	"behat/behat": "^3.1",
        	"drupal/drupal-extension": "^3.1",
        	"behat/mink": "~1.6",
        	"behat/mink-goutte-driver": "~1.2",
        	"jcalderonzumba/gastonjs": "~1.0.2",
        	"jcalderonzumba/mink-phantomjs-driver": "~0.3.1",
        	"mikey179/vfsStream": "~1.2",
        	"phpunit/phpunit": "~4.8",
        	"symfony/css-selector": "2.7.*"
    	},
	"require": {
        	"composer/installers": "^1.0",
        	"drupal-composer/drupal-scaffold": "^2.0.0",
        	"cweagans/composer-patches": "1.5.0",
        	"crowcg/upmembership": "^8.1.0"
    	},
    	"repositories": [
        	{
            		"type": "composer",
            		"url": "https://packagist.drupal-composer.org"
        	}
    	],
	"autoload": {
		"classmap": [
			"scripts/ScriptHandler.php"
		]
	},
	"scripts": {
        	"drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        	"pre-install-cmd": [
            		"CrowCG\\UpMembership\\ScriptHandler::checkComposerVersion"
        	],
        	"pre-update-cmd": [
            		"CrowCG\\UpMembership\\ScriptHandler::checkComposerVersion"
        	],
        	"post-install-cmd": [
        	    	"CrowCG\\UpMembership\\ScriptHandler::createRequiredFiles"
        	],
        	"post-update-cmd": [
            		"CrowCG\\UpMembership\\ScriptHandler::createRequiredFiles"
        	]
    	},
    	"extra": {
        	"installer-paths": {
            		"web/core": ["type:drupal-core"],
            		"web/libraries/{$name}": ["type:drupal-library"],
            		"web/modules/contrib/{$name}": ["type:drupal-module"],
            		"web/profiles/contrib/{$name}": ["type:drupal-profile"],
            		"web/themes/contrib/{$name}": ["type:drupal-theme"],
            		"drush/contrib/{$name}": ["type:drupal-drush"]
        	}
    	}
}
